pipeline {
    agent any

    environment {
        PATH = "/path/to/snyk:$PATH"
    }

    tools {
        maven 'Maven-3.9.1'
    }

    stages {
        stage('Install Snyk') {
            steps {
                script {
                    // Install Snyk
                    sh 'sudo apt install npm'
                    sh 'npm install -g snyk'
                }
            }
        }

        stage('maven build and test') {
            steps {
                sh 'ls -ltr'
                sh "mvn clean package -DskipTests=true"
                sh "mvn compile"
            }
        }

        stage('snyk scanning') {
            steps {
                script {
                    // Ensure that Snyk is in the PATH
                    echo "Current PATH: $PATH"
                    sh 'which snyk'
                    // Use credentials for Snyk scanning
                    withCredentials([string(credentialsId: 'SNYK_API_TOKEN', variable: 'SNYK_API_TOKEN')]) {
                        sh "snyk test --token=$SNYK_API_TOKEN"
                    }
                }
            }
        }

        stage('sonarcloud') {
            steps {
                script {
                    env.SONARCLOUD_TOKEN = SONARCLOUD_TOKEN
                    sh "mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=deepak4566_spring-petclinic"
                }
            }
        }
    }
}
