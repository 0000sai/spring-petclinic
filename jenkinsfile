pipeline {
    agent any
    tools {
        maven 'Maven-3.9.1'
        
    }

    stages {
        stage('maven build and test') {
            steps {
                sh 'ls -ltr'
                sh "mvn clean package -DskipTests=true"
                sh "mvn compile"
                
            }
        }

        stage('snyk scanning') {
            steps {
                echo 'Testing...'
                 snykSecurity(snykTokenId: $SNYK_TOKEN)   
                
            }
        }

        stage('sonarcloud') {
            steps {
               script{ env.SONARCLOUD_TOKEN = "${SONARCLOUD_TOKEN}"
                sh "mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=deepak4566_spring-petclinic" }
            }
        }
    }
}
